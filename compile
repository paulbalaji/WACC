#!/usr/bin/env node
var fs = require('fs'),
	path = require('path');

var compiler = require('./dist/compiler.js');

var mainFilename = process.argv[2];
var headerFilenames = process.argv.slice(3);
var outputFilename = path.basename(mainFilename, '.wacc') + '.s';

compiler.compile(mainFilename, headerFilenames, outputFilename);
